<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/solution_tv"
        android:textSize="30dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_above="@id/result_tv"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_tv"
        android:text="0"
        android:textSize="50dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:layout_above="@id/buttons_layout"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons_layout"
        android:background="#9AFBFBFB"
        android:paddingVertical="10dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_c"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_margin="5dp"
            android:backgroundTint="#A30101"
            android:text="C"
            android:textSize="32dp"
            android:textColor="@color/white"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_open_brac"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_margin="5dp"
            android:backgroundTint="#6E6E6E"
            android:text="("
            android:textSize="32dp"
            android:textColor="@color/white"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_close_brac"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_margin="5dp"
            android:backgroundTint="#6E6E6E"
            android:text=")"
            android:textSize="32dp"
            android:textColor="@color/white"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_divide"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_margin="5dp"
            android:text="/"
            android:textSize="32dp"
            android:backgroundTint="#FF9800"
            android:textColor="@color/white"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="7"
                android:textSize="32dp"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="8"
                android:textSize="32dp"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="9"
                android:textSize="32dp"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="*"
                android:textSize="32dp"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="4"
                android:textSize="32dp"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="5"
                android:textSize="32dp"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="6"
                android:textSize="32dp"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_addition"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="+"
                android:textSize="32dp"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="1"
                android:textSize="32dp"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="2"
                android:textSize="32dp"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="3"
                android:textSize="32dp"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_subtraction"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="-"
                android:textSize="32dp"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="AC"
                android:textSize="24dp"
                android:backgroundTint="#A30101"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="0"
                android:textSize="32dp"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="."
                android:textSize="32dp"
                android:textColor="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equal"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_margin="5dp"
                android:text="="
                android:textSize="32dp"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>